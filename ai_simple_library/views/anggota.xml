<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="anggota_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Anggota">
                <sheet>
                    <!-- <field name="img_doctor" widget="image" class="oe_avatar"/> -->
                    <group string="Identity" col="4">
                        <field name="name" />
                        <!-- <field name="gender" />
                        <field name="age" />
                        </field name="note"/> -->
                    </group>
                </sheet>
                <!-- <div class="o_attachment_preview"/>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>

    <record id="anggota_view_tree" model="ir.ui.view">
        <field name="name">res.partner.view.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name" />
                <!-- <field name="age" />
                <field name="gender" />
                <field name="note" optional="hide"/> -->

            </tree>
        </field>
    </record>

    <record id="action_anggota" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="anggota_action"/>
        <field name="view_id" ref="anggota_view_form"/>
    </record>


    <record id="anggota_action" model="ir.actions.act_window">
        <field name="name">Anggota</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p name="o_view_nocontent_smiling_face">
            Create your first data data!
            </p>
        </field>
    </record>

    <menuitem id="libary_menu" name="Libary" sequence="10"/>

    <menuitem id="info_menu" name="Information" parent="libary_menu" sequence="10"/>

    <menuitem id="anggota_menu" name="Anggota" action="anggota_action" parent="info_menu" sequence="10"/>

</odoo>
